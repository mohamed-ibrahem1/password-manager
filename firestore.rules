rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User-specific password storage
    // Each user can only access their own passwords
    match /users/{userId}/passwords/{passwordId} {
      // Allow read and write only if:
      // 1. User is authenticated (logged in)
      // 2. The userId in the path matches the authenticated user's ID
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access
    // This prevents access to any other collections or documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
